<!-- app/views/series/edit.html.erb -->
<div class="max-w-4xl mx-auto my-10">
  <h1 class="text-4xl font-bold mb-6">Edit Series: <%= @series.title %></h1>

  <%= form_with(model: @series, local: true, class: "bg-white shadow-lg rounded-lg p-8 space-y-6") do |f| %>
    <!-- Title Field -->
    <div class="space-y-1">
      <%= f.label :title, "Title", class: "block text-lg font-semibold text-gray-700" %>
      <%= f.text_field :title, placeholder: "Enter series title", class: "shadow-sm border rounded-lg w-full py-3 px-4 text-gray-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
    </div>

    <!-- Description Field -->
    <div class="space-y-1">
      <%= f.label :description, "Description", class: "block text-lg font-semibold text-gray-700" %>
      <%= f.text_area :description, rows: 5, class: "shadow-sm border rounded-lg w-full py-3 px-4 text-gray-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent", placeholder: "Enter a description of the series..." %>
    </div>

    <!-- Submit and Cancel Buttons -->
    <div class="flex items-center justify-between">
      <%= f.submit "Update Series", class: "bg-blue-600 hover:bg-blue-700 text-white font-semibold py-2 px-6 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" %>
      <%= link_to "Cancel", series_path(@series), class: "bg-gray-600 hover:bg-gray-700 text-white font-semibold py-2 px-6 rounded-lg focus:outline-none focus:ring-2 focus:ring-gray-500" %>
    </div>
  <% end %>
</div>
