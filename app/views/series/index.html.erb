<!-- app/views/series/index.html.erb -->
<div class="max-w-6xl mx-auto my-10">
  <div class="flex justify-between items-center">
    <h1 class="text-4xl font-bold mb-6">All Series</h1>
    <%= link_to 'Create New Series', new_series_path, class: "inline-flex items-center px-4 py-2 bg-green-500 text-white font-bold rounded-md hover:bg-green-600" %>
  </div>

  <% if @series.any? %>
    <ul class="space-y-4">
      <% @series.each do |series| %>
        <li class="bg-white p-4 rounded-lg shadow-md">
          <div class="flex justify-between items-center">
            <div>
              <h2 class="text-2xl font-bold mb-2">
                <%= link_to series.title, series_path(series), class: "text-blue-500 hover:underline" %>
              </h2>
              <p class="text-gray-700 mb-2"><%= truncate(series.description, length: 150) %></p>
              <p class="text-sm text-gray-500">Created by <%= series.user.email %> on <%= series.created_at.strftime("%d %B %Y") %></p>
            </div>

            <% if series.user == current_user %>
              <div class="space-x-2">
                <%= link_to 'Edit', edit_series_path(series), class: "inline-flex items-center px-4 py-2 bg-blue-500 text-white font-bold rounded-md hover:bg-blue-600" %>
                <%= link_to 'Delete', series_path(series), method: :delete, data: { confirm: 'Are you sure you want to delete this series?' }, class: "inline-flex items-center px-4 py-2 bg-red-500 text-white font-bold rounded-md hover:bg-red-600" %>
              </div>
            <% end %>
          </div>
        </li>
      <% end %>
    </ul>
  <% else %>
    <p class="text-gray-700">No series have been created yet.</p>
  <% end %>
</div>
