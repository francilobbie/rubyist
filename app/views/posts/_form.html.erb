<%= form_with(model: @post, local: true, class: "max-w-[62rem] mx-auto bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4", data: { controller: "post-form-cancel-button" }) do |f| %>
  <!-- Title Field -->
  <div class="mb-4">
    <%= f.label :title, class: "block text-gray-700 text-sm font-bold mb-2" %>
    <%= f.text_field :title, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
  </div>

  <!-- Body Field -->
  <div class="mb-4">
    <%= f.label :body, class: "block text-gray-700 text-sm font-bold mb-2" %>
    <%= f.rich_text_area :body, class: "form-control shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
  </div>

  <!-- Tags Field -->
  <div class="mb-6">
    <%= f.label :tag_list, "Tags (separated by commas)", class: "block text-gray-700 text-sm font-bold mb-2" %>
    <%= f.text_field :tag_list, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline", placeholder: "tag1, tag2, tag3" %>
  </div>

  <!-- Published At Field -->
  <div class="mb-4">
    <%= f.label :published_at, class: "block text-gray-700 text-sm font-bold mb-2" %>

    <% if @post.draft? %>
      <%= f.datetime_select :published_at, include_blank: true, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
    <% else %>
      <p class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline">
        <%= @post.published_at.strftime('%b %d, %Y %H:%M %p') %>
      </p>
      <p class="text-sm text-gray-500">This post has already been published you cannot edit this part.</p>
    <% end %>
  </div>

  <!-- Submit and Cancel Buttons -->
  <div class="flex items-center justify-between">
    <%= f.submit @post.new_record? ? "Create" : "Update", class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" %>
    <%= link_to "Cancel", :back, class: "bg-gray-500 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline", data: { action: "click->form#cancel" } %>
  </div>
<% end %>
