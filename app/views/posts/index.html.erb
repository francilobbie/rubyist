<div class="container mt-12 mx-auto ">

  <div class=" flex justify-between items-center">
    <div>
      <h1 class=" mb-10 ">My arcticle</h1>
    </div>
    <div>
      <%= link_to "new article", new_post_path, class: "bg-green-500 px-4 py-2 mt-10 " %>
    </div>
  </div>

  <% @posts.each do |post| %>
  <div class="bg-gray-100 p-4 rounded-lg mb-4">
    <h2 class="text-2xl font-bold mb-4"><%= post.title %></h2>
    <p class="text-gray-700 text-base"><%= post.body %></p>
    <div class="flex justify-end">
      <%= link_to "edit", edit_post_path(post), class: "bg-blue-500 px-4 py-2 mt-10 mr-2" %>
      <%= link_to "delete", post_path(post), data: { turbo_method: :delete, turbo_confimr: "Are you sure?" }, class: "bg-red-500 px-4 py-2 mt-10" %>

    </div>
  <% end %>
</div>
