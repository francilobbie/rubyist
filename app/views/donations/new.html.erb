<script src="https://js.stripe.com/v3/"></script>

<!-- Container with padding and flexbox adjustments -->
<div class="flex items-center justify-center min-h-screen bg-gray-100">
  <!-- Form wrapper with max width, margin, padding, and shadow for better aesthetics -->
  <div class="max-w-lg w-full bg-white p-8 rounded-lg shadow-lg" data-controller="stripe" data-stripe-publishable-key="<%= ENV['STRIPE_PUBLISHABLE_KEY'] %>">
    <!-- Form title -->
    <h2 class="text-3xl font-bold text-gray-800 mb-6 text-center">Faire un don</h2>

    <!-- Form with adjusted spacing and layout -->
    <%= form_with model: @donation, url: donations_path, local: true, data: { turbo: false } do |form| %>
      <div class="mb-5">
        <label class="block text-gray-700 text-sm font-semibold mb-2" for="amount">
          Montant du don (€)
        </label>
        <!-- Donation amount input with improved padding and rounded borders -->
        <%= form.number_field :amount, min: 0.50, step: 0.05, value: 10.00, class: "w-full px-4 py-3 border rounded-lg shadow-sm text-gray-700 focus:outline-none focus:ring-2 focus:ring-blue-500", placeholder: "Entrez le montant du don", data: { stripe_target: "amountInput" } %>
        <p class="text-sm text-gray-500 mt-1">Le montant minimum est de 0,50€.</p>
      </div>

      <!-- Submit button with improved size and hover effects -->
      <div class="mt-6">
        <%= form.submit "Faire un don", class: "w-full cursor-pointer bg-blue-600 hover:bg-blue-700 text-white font-bold py-3 rounded-lg transition-colors duration-300 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-600" %>
      </div>
    <% end %>
  </div>
</div>
