<div class="max-w-lg mx-auto bg-white p-6 rounded-lg shadow-lg" data-controller="stripe" data-action="submit->stripe#submit" data-stripe-publishable-key="<%= ENV['STRIPE_PUBLISHABLE_KEY'] %>">
  <h2 class="text-2xl font-semibold text-gray-800 mb-6">Faire un don</h2>

  <%= form_with model: @donation, url: donations_path, method: :post, local: true do |form| %>
    <div class="mb-4">
      <label class="block text-gray-700 text-sm font-bold mb-2" for="amount">
        Montant du don (€)
      </label>
      <%= form.number_field :amount, min: 0.50, step: 0.05, value: 10.00, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline", placeholder: "Entrez le montant du don" %>
      <p class="text-sm text-gray-600">Le montant minimum est de 0,50€.</p>
    </div>

    <!-- Stripe card element -->
    <div class="mb-4">
      <label class="block text-gray-700 text-sm font-bold mb-2">Détails de la carte</label>
      <div id="card-element" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"></div>
      <div id="card-errors" class="text-red-500 text-sm mt-2"></div>
    </div>

    <!-- Hidden Stripe Token -->
    <%= hidden_field_tag :stripeToken, '', id: 'stripeToken', data: { stripe_target: "stripeToken" } %>

    <div class="flex items-center justify-between">
      <%= form.submit "Faire un don", class: "bg-blue-500 hover:bg-blue-700 cursor-pointer text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" %>
    </div>
  <% end %>

  <div class="my-4 text-center">Ou avec PayPal</div>

  <div id="paypal-button-container"></div>

  <script src="https://www.paypal.com/sdk/js?client-id=AXYpqHT6jQ1CUT7ogwA1FtWAHUvWjs0RlDiXA9NZ9unkcheFFI-QFXxnTwPkku3T0VvDo0JgNtvVlswC&currency=EUR&disable-funding=card"></script>



  <script>
    paypal.Buttons({
  createOrder: function(data, actions) {
    var donationAmount = document.querySelector('input[name="donation[amount]"]').value;
    return actions.order.create({
      purchase_units: [{
        amount: {
          value: donationAmount // Dynamically set amount
        }
      }]
    });
  },
  onApprove: function(data, actions) {
    return actions.order.capture().then(function(details) {
      alert('Donation completed by ' + details.payer.name.given_name);
    });
  },
  onError: function(err) {
    alert('Something went wrong with PayPal: ' + err);
  },
  // This disables debit/credit card as a funding source
  funding: {
    disallowed: [paypal.FUNDING.CARD]
  }
}).render('#paypal-button-container');

  </script>
</div>
