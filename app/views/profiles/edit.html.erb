<div class="max-w-4xl mx-auto mt-10">
  <h1 class="text-4xl font-bold mb-4">Edit Profile</h1>

  <%= form_with(model: [@user, @profile], local: true, class: "space-y-4") do |f| %>
    <div>
      <%= f.label :first_name, class: "block text-sm font-medium text-gray-700" %>
      <%= f.text_field :first_name, class: "block w-full mt-1 border-gray-300 rounded-md shadow-sm" %>
    </div>

    <div>
      <%= f.label :last_name, class: "block text-sm font-medium text-gray-700" %>
      <%= f.text_field :last_name, class: "block w-full mt-1 border-gray-300 rounded-md shadow-sm" %>
    </div>

    <div>
      <%= f.label :bio, class: "block text-sm font-medium text-gray-700" %>
      <%= f.text_area :bio, rows: 5, class: "block w-full mt-1 border-gray-300 rounded-md shadow-sm" %>
    </div>

    <div>
      <%= f.label :avatar, "Profile Picture", class: "block text-sm font-medium text-gray-700" %>
      <%= f.file_field :avatar, class: "block w-full mt-1 border-gray-300 rounded-md shadow-sm" %>
    </div>

    <div class="flex items-center justify-between mt-6">
      <%= f.submit "Update Profile", class: "bg-blue-500 text-white px-4 py-2 rounded" %>
      <%= link_to "Cancel", user_profile_path(@user), class: "bg-gray-500 text-white px-4 py-2 rounded" %>
    </div>
  <% end %>
</div>
