<div class="max-w-4xl mx-auto mt-10">
  <h1 class="text-4xl font-bold mb-4">Modifier le profil</h1>

  <%= form_with(model: @profile, url: user_profile_path(@user), local: true, class: "space-y-4") do |f| %>

    <div>
      <%= label_tag 'user_username', 'Nom d\'utilisateur', class: "block text-sm font-medium text-gray-700" %>
      <%= text_field_tag 'user[username]', @user.username, class: "block w-full mt-1 border-gray-300 rounded-md shadow-sm" %>
    </div>

    <div>
      <%= f.label :first_name, 'Prénom', class: "block text-sm font-medium text-gray-700" %>
      <%= f.text_field :first_name, class: "block w-full mt-1 border-gray-300 rounded-md shadow-sm" %>
    </div>

    <div>
      <%= f.label :last_name, 'Nom', class: "block text-sm font-medium text-gray-700" %>
      <%= f.text_field :last_name, class: "block w-full mt-1 border-gray-300 rounded-md shadow-sm" %>
    </div>

    <div>
      <%= f.label :bio, 'Biographie', class: "block text-sm font-medium text-gray-700" %>
      <%= f.text_area :bio, rows: 5, class: "block w-full mt-1 border-gray-300 rounded-md shadow-sm" %>
    </div>

    <div>
      <%= f.label :avatar, "Photo de profil", class: "block text-sm font-medium text-gray-700" %>
      <%= f.file_field :avatar, class: "block w-full mt-1 border-gray-300 rounded-md shadow-sm" %>
    </div>

    <div class="flex items-center justify-between mt-6">
      <%= f.submit "Mettre à jour le profil", class: "bg-blue-500 text-white px-4 py-2 rounded cursor-pointer" %>
      <%= link_to "Annuler", user_profile_path(@user), class: "bg-gray-500 text-white px-4 py-2 rounded cursor-pointer" %>
    </div>
  <% end %>
</div>
