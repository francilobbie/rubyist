<div class="flex items-center justify-center min-h-screen bg-gray-100">
  <div class="w-full max-w-md bg-white shadow-md rounded-lg p-8">

<h2 class="text-2xl font-bold mb-6">Modifier vos informations</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: 'bg-white shadow-md rounded-lg px-8 pt-6 pb-8 mb-6' }) do |f| %>
  <!-- Display error messages -->
  <%= render "users/shared/error_messages", resource: resource %>

  <!-- Email Section -->
  <div class="mb-6">
    <%= f.label :email, 'Adresse e-mail', class: 'block text-gray-700 text-sm font-semibold mb-2' %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500' %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div class="text-sm text-yellow-500 mb-4">En attente de confirmation pour : <%= resource.unconfirmed_email %></div>
  <% end %>

  <!-- Password Section -->
  <div class="mb-6">
    <h3 class="text-lg font-semibold mb-2">Changer votre mot de passe (optionnel)</h3>

    <div class="relative mb-4" data-controller="password-toggle">
      <%= f.label :password, 'Nouveau mot de passe', class: 'block text-gray-700 text-sm font-semibold mb-2' %>
      <%= f.password_field :password, autocomplete: "new-password", placeholder: "Laisser vide si non changé", class: 'shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 pr-10' %>
      <span class="password-toggle absolute inset-y-0 right-0 pr-3 flex items-center cursor-pointer" data-action="click->password-toggle#toggle">
        <!-- Icons for showing/hiding password -->
      </span>
      <% if @minimum_password_length %>
        <em class="text-xs text-gray-500">Au moins <%= @minimum_password_length %> caractères</em>
      <% end %>
    </div>

    <div class="relative mb-4" data-controller="password-toggle">
      <%= f.label :password_confirmation, 'Confirmer le nouveau mot de passe', class: 'block text-gray-700 text-sm font-semibold mb-2' %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 pr-10' %>
    </div>
  </div>

  <!-- Current Password Section -->
  <div class="relative mb-6" data-controller="password-toggle">
    <%= f.label :current_password, 'Mot de passe actuel (obligatoire pour confirmer les changements)', class: 'block text-gray-700 text-sm font-semibold mb-2' %>
    <%= f.password_field :current_password, autocomplete: "current-password", class: 'shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 pr-10' %>
  </div>

  <!-- Update Button -->
  <div class="flex justify-end">
    <%= f.submit "Mettre à jour", class: 'bg-indigo-500 cursor-pointer hover:bg-indigo-600 text-white font-semibold py-2 px-4 rounded-md focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500' %>
  </div>
<% end %>

<!-- Account Cancellation Section -->
<h3 class="text-xl font-bold mt-8">Supprimer mon compte</h3>
<p class="text-gray-600 mb-4">Si vous n'êtes pas satisfait, vous pouvez supprimer votre compte.</p>

<%= button_to "Supprimer mon compte", registration_path(resource_name), data: { confirm: "Êtes-vous sûr de vouloir supprimer votre compte ?" }, method: :delete, class: 'bg-red-500 hover:bg-red-600 text-white font-semibold py-2 px-4 rounded-md focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500' %>

<%= link_to "Retour", :back, class: 'inline-block mt-4 text-indigo-500 hover:text-indigo-400 underline' %>


  </div>
</div>
