  <!-- Sidebar -->
  <div class="bg-white w-64 px-4 py-8 shadow-md">
    <div class="flex flex-col space-y-6">
        <%= link_to dashboard_show_path, class: "text-indigo-600 flex items-center space-x-2" do %>
