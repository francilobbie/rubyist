<!-- app/views/notifications/index.html.erb -->
<h1 class="text-2xl font-bold mb-6">Notifications</h1>

<% if @notifications.any? %>
  <div class="space-y-4">
    <% @notifications.each do |notification| %>
      <div class="p-4 rounded-lg shadow-md <%= notification.read? ? 'bg-gray-200' : 'bg-white' %> flex justify-between items-center">
        <div>
          <p class="text-gray-800"><%= link_to notification.message, notification.url, class: 'text-blue-600 hover:underline' %></p>
          <p class="text-sm text-gray-500"><%= time_ago_in_words(notification.created_at) %> ago</p>
        </div>
        <% unless notification.read? %>
          <%= button_to 'Mark as Read', mark_as_read_notification_path(notification), method: :patch, class: 'bg-blue-500 text-white px-4 py-2 rounded-lg hover:bg-blue-600 transition ease-in-out duration-150' %>
        <% end %>
      </div>
    <% end %>
  </div>
<% else %>
  <p class="text-gray-500">You have no notifications at the moment.</p>
<% end %>
