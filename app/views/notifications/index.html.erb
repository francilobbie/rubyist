<div class="container mx-auto p-4">
  <h1 class="text-2xl font-semibold mb-4">Notifications</h1>
  <%= turbo_stream_from "notifications_#{current_user.id}_index_list" %>

  <div id="notification-index-list" class="space-y-2">
    <% if @notifications.any? %>
      <%= render partial: "notifications/notification", collection: @notifications %>
    <% else %>
      <p class="text-gray-500">You have no notifications at this time.</p>
    <% end %>
  </div>
</div>
