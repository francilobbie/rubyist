<%# app/views/save_posts/_save.html.erb %>
<div id="<%= dom_id(post, :save) %>">
  <% if current_user && post.save_posts.exists?(user: current_user) %>
    <%= button_to post_save_path(post),
                  method: :delete,
                  class: 'inline-flex items-center px-4 py-2',
                  data: { turbo_frame: "_top" } do %>
      <svg fill="#FFD700" width="24px" height="24px" viewBox="-5.5 0 24 24" xmlns="http://www.w3.org/2000/svg">
        <path d="m0 2.089v21.912l6.546-6.26 6.545 6.26v-21.912c-.012-1.156-.952-2.089-2.109-2.089-.026 0-.051 0-.077.001h.004-8.726c-.022-.001-.047-.001-.073-.001-1.158 0-2.098.933-2.109 2.088v.001z"/>
      </svg>
      <span class="ml-2">Unsave</span>
    <% end %>
  <% else %>
    <%= button_to post_save_path(post),
                  method: :post,
                  class: 'inline-flex items-center px-4 py-2',
                  data: { turbo_frame: "_top" } do %>
      <svg fill="none" stroke="#000000" width="24px" height="24px" viewBox="-5.5 0 24 24" xmlns="http://www.w3.org/2000/svg">
        <path d="m0 2.089v21.912l6.546-6.26 6.545 6.26v-21.912c-.012-1.156-.952-2.089-2.109-2.089-.026 0-.051 0-.077.001h.004-8.726c-.022-.001-.047-.001-.073-.001-1.158 0-2.098.933-2.109 2.088v.001z"/>
      </svg>
      <span class="ml-2">Save</span>
    <% end %>
  <% end %>
</div>
