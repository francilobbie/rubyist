<h1>Manage Your Posts</h1>

<% if @posts.any? %>
  <% @posts.each do |post| %>
    <div>
      <h3><%= link_to post.title, post_path(post) %></h3>
      <p><%= post.body %></p>
      <p>
        <%= link_to 'Edit', edit_post_path(post) %> |
        <%= link_to 'Delete', post_path(post), method: :delete, data: { confirm: 'Are you sure?' } %>
      </p>
    </div>
  <% end %>
<% else %>
  <p>No posts found.</p>
<% end %>
