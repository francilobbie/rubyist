<div>
  <h1><%= @user.email %>'s Profile</h1>

  <p>Manage your posts:</p>
  <ul>
    <li><%= link_to "All Posts", posts_user_path(@user) %></li>
    <li><%= link_to "Drafts", posts_user_path(@user, filter: 'draft') %></li>
    <li><%= link_to "Published", posts_user_path(@user, filter: 'published') %></li>
    <li><%= link_to "Scheduled", posts_user_path(@user, filter: 'scheduled') %></li>
  </ul>
  <%= link_to 'Delete Account', user_registration_path(current_user), data: { turbo_method: :delete, turbo_confirm: 'Are you sure you want to delete your account?' } %>
  <%= button_to 'Delete Account', user_registration_path(current_user), method: :delete, data: { turbo_confirm: 'Are you sure you want to delete your account?' }, class: "btn btn-danger" %>



</div>
