<!-- app/views/admin/users/show.html.erb -->
<div class="max-w-4xl mx-auto px-4 py-8">
  <div class="bg-white shadow rounded-lg p-6">
    <div class="flex items-center justify-between mb-6">
      <h1 class="text-2xl font-semibold">User Details</h1>
      <div>
        <%= link_to 'Edit', edit_admin_user_path(@user), class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
        <%= link_to 'Delete', admin_user_path(@user), method: :delete, data: { confirm: 'Are you sure?' }, class: "bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded ml-4" %>
      </div>
    </div>

    <div class="mb-4">
      <h2 class="text-lg font-medium">Email:</h2>
      <p><%= @user.email %></p>
    </div>

    <div class="mb-4 overflow-auto h-48">
      <h2 class="text-lg font-medium">Posts:</h2>
      <div class="space-y-2">
        <% @user.posts.each do |post| %>
          <div class="flex justify-between items-center">
            <p class="truncate"><%= post.title %></p>
            <%= link_to 'View', post_path(post), class: "text-blue-500 hover:text-blue-700" %>
          </div>
        <% end %>
      </div>
    </div>

    <div class="mb-4 overflow-auto h-48">
      <h2 class="text-lg font-medium">Comments:</h2>
      <div class="space-y-2">
        <% @user.comments.each do |comment| %>
          <div class="flex justify-between items-center">
            <p class="truncate"><%= comment.content %></p>
            <%= link_to 'View', post_path(comment.post), class: "text-blue-500 hover:text-blue-700" %>
          </div>
        <% end %>
      </div>
    </div>

    <div class="mb-4">
      <h2 class="text-lg font-medium">Reports:</h2>
      <p>Total Reports: <%= 6 %></p>
      <p>Pending Reports: <%= 2 %></p>
      <p>Account Status: <%= "Active" %></p>
    </div>

    <%= link_to 'Back to Users', admin_users_path, class: "bg-gray-500 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded" %>
  </div>
</div>
