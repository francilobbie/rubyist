<!-- app/views/admin/users/new.html.erb -->
<div class="max-w-4xl mx-auto mt-8" data-controller="dropdown">
  <h1 class="text-4xl font-bold mb-4">Create New User</h1>
  <p class="mb-6 text-gray-600">Fill out the form below to create a new user.</p>
  <%= form_for [:admin, @user], html: { class: 'bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4' }, data: { turbo: false } do |f| %>
    <% if @user.errors.any? %>
      <div id="error_explanation" class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative" role="alert">
        <strong class="font-bold">Oops!</strong>
        <span class="block sm:inline"><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</span>
        <ul>
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="mb-4">
      <%= f.label :email, 'Email', class: 'block text-gray-700 text-sm font-bold mb-2' %>
      <%= f.email_field :email, autofocus: true, class: 'shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline' %>
    </div>

    <div class="mb-4">
      <%= f.label :first_name, 'First Name', class: 'block text-gray-700 text-sm font-bold mb-2' %>
      <%= f.text_field :first_name, class: 'shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline' %>
    </div>

    <div class="mb-4">
      <%= f.label :last_name, 'Last Name', class: 'block text-gray-700 text-sm font-bold mb-2' %>
      <%= f.text_field :last_name, class: 'shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline' %>
    </div>

    <div class="mb-4">
      <%= f.label :password, 'Password', class: 'block text-gray-700 text-sm font-bold mb-2' %>
      <%= f.password_field :password, class: 'shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline' %>
    </div>

    <div class="mb-4">
      <%= f.label :password_confirmation, 'Confirm Password', class: 'block text-gray-700 text-sm font-bold mb-2' %>
      <%= f.password_field :password_confirmation, class: 'shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline' %>
    </div>

    <!-- Role selection, adapt as per your roles setup -->
    <div class="mb-4 relative">
      <% if current_user.has_role?(:admin) && current_user != @user %>
          <%= f.label :role_ids, 'Roles', class: 'block text-gray-700 text-sm font-bold mb-2' %>
          <div data-action="click->dropdown#toggle" data-dropdown-target="display" class="dropdown-display cursor-pointer border p-2 rounded">Select Role</div>
          <div data-dropdown-target="list" class="dropdown-list hidden absolute bg-white border rounded mt-1 w-full z-10">
            <div data-action="click->dropdown#selectNoRole" class="dropdown-item p-2 hover:bg-gray-100 cursor-pointer">No Role</div>
            <% Role.all.each do |role| %>
              <div data-action="click->dropdown#select" data-role-id="<%= role.id %>" class="dropdown-item p-2 hover:bg-gray-100 cursor-pointer"><%= role.name %></div>
            <% end %>
          </div>
          <%= f.hidden_field :role_ids, data: { dropdown_target: "selected" }, value: @user.roles.pluck(:id).join(',') %>
        <% else %>
          <p class="text-gray-700">You cannot change your own role or you do not have permission to change roles.</p>
        <% end %>
    </div>

    <div class="flex items-center justify-between">
      <%= f.submit 'Create User', class: 'bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline' %>
      <%= link_to 'Cancel and go back to users', admin_users_path, class: 'inline-block align-baseline font-bold text-sm text-blue-500 hover:text-blue-800' %>
    </div>
  <% end %>
</div>
