<div data-controller="share-modal" data-share-url="<%= post_url(@post, only_path: false) %>" class="">
  <div class="flex items-center justify-end">
    <button class="text-gray-500 hover:text-gray-800" data-modal-target="closeButton">
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
        <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
      </svg>
    </button>
  </div>

  <div class="mt-4">
    <h2 class="text-2xl font-semibold leading-6 text-gray-900">Share this post</h2>
  </div>

  <div class="flex items-center mt-5">
    <div class="w-16 h-16">
    </div>
    <div class="ml-4">
      <p class="text-lg font-semibold"><%= @post.title %></p>
    </div>
  </div>

  <div class="mt-8">
    <ul class="grid grid-cols-1 gap-x-3 gap-y-8 sm:grid-cols-3 sm:gap-x-6 lg:grid-cols-2 xl:gap-x-8">
      <li>
        <div class="border border-solid cursor-pointer hover:bg-gray-100 rounded-xl border-gray-200 flex items-center justify-center" data-action="click->share-modal#copyLink">
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 32 32" class="h-8 w-8 fill-current text-gray-600">
            <path d="M25 5a4 4 0 0 1 4 4v17a5 5 0 0 1-5 5H12a5 5 0 0 1-5-5V10a5 5 0 0 1 5-5h13zm0 2H12a3 3 0 0 0-3 3v16a3 3 0 0 0 3 3h12a3 3 0 0 0 3-3V9a2 2 0 0 0-2-2zm-3-6v2H11a6 6 0 0 0-5.996 5.775L5 9v13H3V9a8 8 0 0 1 7.75-7.996L11 1h11z"></path>
          </svg>
          <p class="text-base p-6 font-semibold">Copy link</p>
        </div>
      </li>
      <li>
        <div class="border border-solid cursor-pointer hover:bg-gray-100 rounded-xl border-gray-200 flex items-center justify-center" data-action="click->share-modal#shareOnLinkedIn">
          <img src="<%= asset_path('linkedin-logo.svg') %>" alt="Linkedin" class="w-8 h-8 mr-2">
          <p class="text-base p-6 font-semibold">LinkedIn</p>
        </div>
      </li>
      <li>
        <div class="border border-solid cursor-pointer hover:bg-gray-100 rounded-xl border-gray-200 flex items-center justify-center" data-action="click->share-modal#shareOnFacebook">
          <img src="<%= asset_path('facebook-logo.svg') %>" alt="Facebook" class="w-8 h-8 mr-2">
          <p class="text-base p-6 font-semibold">Facebook</p>
        </div>
      </li>
      <li>
        <div class="border border-solid cursor-pointer hover:bg-gray-100 rounded-xl border-gray-200 flex items-center justify-center" data-action="click->share-modal#shareOnReddit">
          <img src="<%= asset_path('reddit-logo.svg') %>" alt="Reddit" class="w-8 h-8 mr-2">
          <p class="text-base p-6 font-semibold">Reddit</p>
        </div>
      </li>
      <li>
        <div class="border border-solid cursor-pointer hover:bg-gray-100 rounded-xl border-gray-200 flex items-center justify-center" data-action="click->share-modal#sendByEmail">
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 32 32" class="h-8 w-8 fill-current text-gray-600">
            <path d="M4 4h24v24H4z" fill="none"/>
            <path d="M3 8v16a3 3 0 0 0 3 3h20a3 3 0 0 0 3-3V8l-13 9-13-9zm14.83 7.71 9.95-7.07V22H4.22V8.64l9.94 7.07L16 16l1.83 1.71z"/>
          </svg>
          <p class="text-base p-6 font-semibold">Email</p>
        </div>
      </li>
    </ul>
  </div>
</div>
